/* 免费模式衣橱页面样式 */
.page-container {
  padding: 0;
  background: var(--background-color, #FFF5F7);
  min-height: 100vh;
}

/* 服务状态 */
.service-status {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.status-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.status-text {
  font-size: 26rpx;
  color: #333;
}

.status.connected {
  border-left: 4rpx solid #4CAF50;
}

.status.disconnected {
  border-left: 4rpx solid #FF5722;
}

/* 分类标签 */
.category-scroll {
  white-space: nowrap;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-item {
  display: inline-block;
  padding: 15rpx 25rpx;
  background: var(--background-color, #FFF5F7);
  border-radius: 25rpx;
  text-align: center;
  min-width: 120rpx;
  margin-right: 15rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  background: var(--primary-color, #FFB6C1);
  color: white;
}

.category-item text {
  display: block;
}

.category-item .count {
  font-size: 20rpx;
  opacity: 0.8;
  margin-top: 5rpx;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.clothing-list {
  flex: 1;
  height: calc(100vh - 200rpx);
  padding: 20rpx;
}

.clothing-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.clothing-item {
  width: calc(33.33% - 14rpx);
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.clothing-item:active {
  transform: scale(0.98);
}

.clothing-image-container {
  position: relative;
  width: 100%;
  height: 250rpx;
}

.clothing-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.clothing-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.7) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  padding: 20rpx;
}

.clothing-item:hover .clothing-overlay,
.clothing-item.selected .clothing-overlay {
  opacity: 1;
}

.btn-overlay {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid white;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.btn-select {
  background: var(--primary-color, #FFB6C1);
  border-color: var(--primary-color, #FFB6C1);
}

.btn-delete {
  background: #ff4757;
  border-color: #ff4757;
}

/* 衣物信息 */
.clothing-info {
  padding: 20rpx 15rpx;
}

.clothing-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.clothing-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag-small {
  background: var(--background-color, #FFF5F7);
  color: var(--primary-color, #FFB6C1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  border: 1rpx solid var(--primary-color, #FFB6C1);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 36rpx;
  margin-bottom: 40rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.selected-count {
  font-size: 28rpx;
  color: #666;
}

/* 添加弹窗 */
.add-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 25rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.btn-close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: var(--background-color, #FFF5F7);
  border: none;
  font-size: 36rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.add-methods {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.method-btn {
  flex: 1;
  padding: 40rpx 20rpx;
  background: var(--background-color, #FFF5F7);
  border: 2rpx dashed var(--primary-color, #FFB6C1);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
}

.method-icon {
  font-size: 48rpx;
}

.method-btn text {
  font-size: 28rpx;
  color: #666;
}

.clothing-form {
  margin-top: 30rpx;
}

.preview-image {
  width: 200rpx;
  height: 250rpx;
  border-radius: 20rpx;
  margin: 0 auto 30rpx;
  display: block;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 600;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  font-size: 32rpx;
  background: white;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  background: white;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.tag-input-area {
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 20rpx;
  background: white;
}

.selected-tags {
  margin-bottom: 15rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag-input {
  width: 100%;
  border: none;
  outline: none;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn {
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
  transition: all 0.3s ease;
  flex: 1;
}

.btn:active {
  transform: scale(0.95);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .clothing-grid {
    padding: 15rpx;
    gap: 15rpx;
  }
  
  .clothing-item {
    width: calc(33.33% - 10rpx);
  }
  
  .modal-content {
    width: 95%;
    margin: 20rpx;
  }
  
  .add-methods {
    flex-direction: column;
  }
}