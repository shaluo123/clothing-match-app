/* 免费部署模式首页样式 */
.page-container {
  padding: 0;
  background: linear-gradient(135deg, var(--background-color, #FFF5F7) 0%, var(--secondary-color, #FFC0CB) 100%);
  min-height: 100vh;
}

/* 服务状态提示 */
.service-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.status-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.status-text {
  font-size: 26rpx;
  color: #333;
}

.status.connected {
  border-left: 4rpx solid #4CAF50;
}

.status.disconnected {
  border-left: 4rpx solid #FF5722;
}

.usage-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 15rpx;
  background: var(--primary-color, #FFB6C1);
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
}

.usage-icon {
  font-size: 20rpx;
  margin-right: 5rpx;
}

/* 欢迎区域 */
.welcome-section {
  padding: 40rpx 30rpx;
  background: white;
  margin: 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.welcome-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.season-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

.welcome-text {
  flex: 1;
}

.greeting {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.season-text {
  font-size: 32rpx;
  color: var(--primary-color, #FFB6C1);
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background: var(--background-color, #FFF5F7);
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  flex: 1;
  padding: 20rpx;
  background: transparent;
  border: none;
  font-size: 32rpx;
}

.search-btn {
  background: var(--primary-color, #FFB6C1);
  color: white;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-size: 32rpx;
}

/* 快捷功能 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  margin: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  width: 150rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.action-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 推荐区域 */
.recommendation-section {
  margin: 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: var(--primary-color, #FFB6C1);
  text-decoration: underline;
}

.recommendation-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rec-card {
  display: flex;
  background: var(--background-color, #FFF5F7);
  border-radius: 20rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
  position: relative;
}

.rec-card:active {
  transform: scale(0.98);
}

.rec-image {
  width: 120rpx;
  height: 160rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
}

.rec-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.rec-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.rec-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  flex: 1;
}

.rec-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background: var(--primary-color, #FFB6C1);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
}

.rec-offline {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: #FF5722;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}

/* 最近搭配 */
.recent-outfits {
  margin: 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.outfit-scroll {
  white-space: nowrap;
}

.outfit-item {
  display: inline-block;
  width: 180rpx;
  margin-right: 20rpx;
  text-align: center;
}

.outfit-item:last-child {
  margin-right: 0;
}

.outfit-image {
  width: 180rpx;
  height: 240rpx;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  background: var(--background-color, #FFF5F7);
}

.outfit-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.outfit-time {
  font-size: 24rpx;
  color: #999;
}

.add-outfit {
  border: 2rpx dashed var(--primary-color, #FFB6C1);
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
}

.add-icon {
  font-size: 60rpx;
  color: var(--primary-color, #FFB6C1);
  margin-bottom: 15rpx;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  background: var(--background-color, #FFF5F7);
  border-radius: 50%;
  margin: 0 auto 15rpx;
}

.add-text {
  font-size: 28rpx;
  color: var(--primary-color, #FFB6C1);
}

/* 统计信息 */
.stats-section {
  display: flex;
  justify-content: space-around;
  margin: 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  text-align: center;
  padding: 20rpx;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color, #FFB6C1);
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

/* 模式切换 */
.mode-switch {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  z-index: 100;
}

.mode-btn {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  border-radius: 25rpx;
  font-size: 26rpx;
  border: none;
  backdrop-filter: blur(10rpx);
}

.mode-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.mode-text {
  font-size: 24rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .welcome-section {
    padding: 30rpx 20rpx;
    margin: 15rpx;
  }
  
  .quick-actions {
    padding: 30rpx 15rpx;
    margin: 15rpx;
  }
  
  .action-item {
    width: 130rpx;
    padding: 25rpx 20rpx;
  }
  
  .recommendation-section,
  .recent-outfits,
  .stats-section {
    margin: 15rpx;
    padding: 25rpx 20rpx;
  }
}