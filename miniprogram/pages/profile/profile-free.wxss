/* 免费版个人中心样式 */
.page-container {
  padding: 0;
  background: linear-gradient(135deg, var(--background-color, #FFF5F7) 0%, var(--secondary-color, #FFC0CB) 100%);
  min-height: 100vh;
}

/* 服务状态 */
.service-status {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.status-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.status-text {
  font-size: 26rpx;
  color: #333;
}

.status.connected {
  border-left: 4rpx solid #4CAF50;
}

.status.disconnected {
  border-left: 4rpx solid #FF5722;
}

.usage-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 15rpx;
  background: var(--primary-color, #FFB6C1);
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
}

.usage-icon {
  font-size: 20rpx;
  margin-right: 5rpx;
}

/* 头部信息 */
.profile-header {
  padding: 40rpx 30rpx;
  background: white;
  margin: 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid var(--primary-color, #FFB6C1);
  margin-right: 30rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 统计区域 */
.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color, #FFB6C1);
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

/* 菜单区域 */
.menu-section {
  margin: 20rpx;
  background: white;
  border-radius: 25rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: var(--background-color, #FFF5F7);
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.version-text {
  font-size: 24rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .profile-header {
    padding: 30rpx 20rpx;
    margin: 15rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
  }
  
  .stats-section {
    padding: 20rpx;
  }
  
  .menu-section {
    margin: 15rpx;
  }
}