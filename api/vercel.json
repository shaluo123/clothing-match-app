{
  "version": 2,
  "builds": [
    {
      "src": "routes/*.js", 
      "use": "@vercel/node" 
    },
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/routes/$1.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With",
        "Cache-Control": "public, max-age=300"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}